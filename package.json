{
  "name": "social-connections-api",
  "version": "1.0.0",
  "description": "Backend API for managing social connections and friendships",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "setup-db": "psql -U $DB_USER -d $DB_NAME -f sql/schema.sql",
    "reset-db": "psql -U $DB_USER -d postgres -c 'DROP DATABASE IF EXISTS social_connections; CREATE DATABASE social_connections;' && npm run setup-db",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop social-connections-api",
    "pm2:restart": "pm2 restart social-connections-api"
  },
  "keywords": [
    "social",
    "api",
    "connections",
    "friends",
    "express",
    "postgresql",
    "rest"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "eslint": "^8.46.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
